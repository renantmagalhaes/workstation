// -*- mode: jsonc -*-
//
// Adopted from dot/catppuccin Waybar
{
  "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  "margin-left": 100,
  "margin-right": 100,
  // Choose the order of the modules
  "modules-left": [
    "hyprland/workspaces",
    "custom/active-icon-window",
    "window",
    "battery",
    "battery#bat2"
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "mpris",
    "custom/weather",
    // "custom/swaync",
    // "sway/language",
    // "backlight",
    "network",
    // "bluetooth",
    "temperature",
    "custom/notification",
    "pulseaudio",
    "tray",
    "custom/power"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "format": "{name}",
    "persistent-workspaces": {
      "DP-1": [1, 2, 3, 4, 5],
      "HDMI-A-1": [6, 7, 8, 9, 10]
    }
  },
