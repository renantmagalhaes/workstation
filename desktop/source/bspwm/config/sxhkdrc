#
# wm independent hotkeys
#

# terminal emulator
ctrl + alt + t
	alacritty

~button3
	xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run

# program launcher
super + Pause
	$HOME/GIT-REPOS/workstation/desktop/source/any/config/rofi/scripts/rofi-startup.sh
super + z
	$HOME/GIT-REPOS/workstation/desktop/source/any/config/rofi/scripts/rofi-startup.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# Open file manager
super + e
	nautilus

# Screenshot
Print
	flameshot gui
ctrl + Print
	gnome-screenshot -i

super + a 
	pavucontrol
super + b
	blueman-manager
super + n
gnome-control-center wifi

# Lock screen
super + l
	$HOME/.config/bspwm/scripts/blur-lock

# Startup script
super + F12
	~/.config/bspwm/scripts/rtm-startup-session.sh

# quit/restart bspwm
super + alt + r
	bspc wm -r && dunstify -i window_list "Successfully restarted BSPWM"

# close and kill
super + q
	bspc node -c
	# bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
# super + {t,shift + t,s,f}
# 	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + y
	bspc node -t floating

super + t
	bspc node -t tiled




# # set the node flags
# super + ctrl + {m,x,y,z}
# 	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
# super + bracket{left,right}
# 	bspc desktop -f {prev,next}.local

# super + ctrl + {Left,Right}
# 	bspc desktop -f {prev,next}.local

# Navigate between workspaces
super + ctrl + Left
	mon=`bspc query -D -d focused --names | cut -c1` && bspc desktop --focus $((mon)) && bspc desktop --focus $((mon - 1))$((mon - 1)) && bspc desktop --focus $((mon - 1))

super + ctrl + Right
	mon=`bspc query -D -d focused --names | cut -c1` && bspc desktop --focus $((mon)) && bspc desktop --focus $((mon + 1))$((mon + 1)) && bspc desktop --focus $((mon + 1))

# Send window to next monitor
super + Return
    bspc node -m last --follow
    #bspc node -m next

# Move windows between workspaces
super + ctrl + shift + Right
	bspc node -d next --follow && mon=`bspc query -D -d focused --names | cut -c1` && bspc desktop --focus $mon && bspc desktop --focus $mon$mon && bspc desktop --focus $mon

super + ctrl + shift + Left
	bspc node -d prev --follow && mon=`bspc query -D -d focused --names | cut -c1` && bspc desktop --focus $mon && bspc desktop --focus $mon$mon && bspc desktop --focus $mon


# focus desktop / send window to desktop
# super + {_,shift + }{JJJJ
#     bspc {desktop -f,node -d} ^{1-9,10}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# # focus or send to the given desktop
# super + {_,shift + }{1-9,0}
# 	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}HJH
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#
# Expand/contract a window by moving one of its side outward/inward
super + alt + {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# super + alt + {Right,Up,Down,Left}
# 	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Media keys
XF86AudioMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86AudioRaiseVolume
	$HOME/.config/dunst/volume/volume.sh up
	# pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
	$HOME/.config/dunst/volume/volume.sh down
	# pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

# Logout
super + alt + Escape
  bspc quit

# Focus sync
super + 1
 bspc desktop --focus '1' && bspc desktop --focus '11'
super + 2
 bspc desktop --focus '2' && bspc desktop --focus '22'
super + 3
 bspc desktop --focus '3' && bspc desktop --focus '33'
super + 4
 bspc desktop --focus '4' && bspc desktop --focus '44'
super + 5
 bspc desktop --focus '5' && bspc desktop --focus '55'




